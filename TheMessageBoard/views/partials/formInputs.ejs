<div class="form-group">
    <label for="topic">Topic</label>
    <input type="text" name="topic" id="topic" class="form-control" required value="<%= post.topic %>">
</div>
<div class="form-group">
    <label for="name">Name</label>
    <input type="text" name="name" id="name" class="form-control" required value="<%= post.name %>">
</div>
<div class="form-group">
    <label for="message">Message</label>
    <textarea type="text" name="message" id="message" class="form-control" required> <%= post.message %> </textarea>
</div>

<button type="submit" class="btn btn-primary btn-lg active mt-3">Submit</button>
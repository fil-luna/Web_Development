  <body class="bg_img d-flex flex-column min-vh-100">

<h1 class="d-flex justify-content-evenly container text-center" id="favoriteBand">Your favorite Artists!</h1>

    
    <div class="artists d-flex justify-content-evenly container text-center">
      <!-- Have to deal with the not happy case --> 
      <% if (data !== undefined) { %>
            <div class="row">
              <!-- using a forEach loop to iterate through data of artist and then display -->
                <% data.forEach(el => { %>
                    <div class="col py-2">
                        <div class="card border-dark text-white bg-secondary mb-3" style="width: 18rem; border: 1px solid black;" id="card">
                            <div class="card-body">
                                <h3 class="card-title" >
                                <%=el.artist%> 
                                </h3>
                                <p class="card-text text-center" style="text-align: center">
                                Artist type: <%=el.type%>
                                </p>
                                <!-- enables the user to delete a favorite artist from their db -->
                              <a href="/faveArtist/<%= el._id %> "><button class="btn-danger">Delete</button></a>     
                        </div>
                    </div>
                </div>
            <% }) %>
            </div>
        <% } %>    
    </div> 
  

